
 <%- include('header.ejs') %>
 <!-- Header-->
            <header class=" py-5" style="background-color: #8EACCD;">
                <div class="container px-5">
                    <div class="row gx-5 align-items-center justify-content-center">
                        <div class="col-lg-6 col-xl-5 col-xxl-4">
                            <div class="my-5 text-center text-xl-start">
                                <h4 class="display-5 fw-bolder  mb-2">Welcome to BlogSphere</h4>
                                <p class="lead fw-normal  mb-4" style="color: #FEF9D9;"> where passion meets purpose.</p>
                                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xl-start">
                                    <a class="btn btn-lg px-3 me-sm-3 shadow" style="background-color:#FEF9D9;" href="/create">Write your own Blog.</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-5 col-xxl-8 d-none d-xl-block text-center"><img class="img-fluid rounded-3 my-5" src="/assets/image1.png" alt="..." /></div>
                    </div>
                </div>
            </header>
            <!-- Features section-->
            <section class="py-5" id="features" style="background-color: #FEF9D9;">
                <div class="container px-5 my-5">
                    <div class="row gx-5">
                        <% if(posts.length > 0) {%>
                            <% posts.forEach((post, index) => { %>
                        <div class="col-lg-4">
                            <div class="row gx-5 row-cols-1 row-cols-md-3">
                                <div class="col mb-4 h-100 w-100">
                                    <a class="btn btn-lg px-3 feature bg-gradient  rounded-3 mb-3 me-sm-3 shadow" style="background-color: #8EACCD;" href="/posts/<%= post.id %>"><i class="bi bi-card-text"></i></a>
                                     <h2 class="h5"><%= post.title %></h2>
                                    <p class="mb-0"><%= post.content.substring(0, 100) %>...</p>
    
                                    </div>
                                </div>
                            </div> <% }) %>
                            <% } else { %>
                                <h3>No blog posts yet. <a href="/create" style="color:#8EACCD;">Create one</a>!</h3>
                            <% } %>
                </div>
            </section>
            <!-- Footer section-->
           <%- include('footer.ejs') %>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Core theme JS-->
        <script src="/scripts.js"></script>
    </body>
</html>
